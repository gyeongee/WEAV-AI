# WEAV AI backend 로컬 환경변수 예시
# [필수] 로컬에서 Django 직접 실행 시 필요

# [필수] Django 기본
SECRET_KEY=your-secret-key
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# [필수] DB (로컬 실행 시)
DB_NAME=weav_ai
DB_USER=weav_user
DB_PASSWORD=your-secure-password
DB_HOST=localhost
DB_PORT=5432

# [필수] Redis
REDIS_URL=redis://localhost:6379/0

# [필수] AI 키 (fal.ai)
FAL_KEY=
FAL_TEXT_ENDPOINT=fal-ai/any-llm
FAL_TEXT_DEFAULT_MODEL=openai/gpt-4o-mini

# [선택] Firebase Admin (로그인 테스트 시 필요)
FIREBASE_SERVICE_ACCOUNT_KEY_PATH=
# FIREBASE_SERVICE_ACCOUNT_KEY_JSON='{"type":"service_account",...}'

# [선택] S3/MinIO
AWS_ACCESS_KEY_ID=minio
AWS_SECRET_ACCESS_KEY=minio123
AWS_STORAGE_BUCKET_NAME=weav-ai-files
AWS_S3_ENDPOINT_URL=http://localhost:9000

# [선택] CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
